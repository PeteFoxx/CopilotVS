{
  "name": "example-ts-app",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "vitest --run --globals",
    "test:coverage": "vitest --coverage --run",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.10.1",
    "@typescript-eslint/parser": "^6.10.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^8.45.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
